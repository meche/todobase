.form
    center(600px)
    height 44px
    display flex
    flex-flow row nowrap
    padding 50px 0
    +below(600px)
        padding 15px
    &__input
        width 80%
        height 100%
        font-family $roboto
        text-transform uppercase
        padding-left 15px
        border 0
    &__button
        width 20%
        height 100%
        border 0
        padding 0
        margin 0
        background $color-send
        color $text-light
